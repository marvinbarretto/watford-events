{
  "name": "watford-events",
  "version": "0.0.11",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "phone": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "cap:install": "npm install @capacitor/core @capacitor/cli @capacitor/ios @capacitor/android",
    "cap:init": "npx cap init",
    "cap:add": "npx cap add ios && npx cap add android",
    "cap:build": "ng build && npx cap copy",
    "cap:sync": "ng build && npx cap copy",
    "cap:ios": "npx cap run ios",
    "cap:live": "ng serve --host=0.0.0.0 --port=3000",
    "cap:android:live": "npx cap run android --live-reload",
    "cap:ios:live": "npx cap run ios --live-reload",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --coverage",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "serve:ssr": "node dist/watford-events/server/server.mjs",
    "build:firebase": "ng build --configuration production",
    "build:android": "npm run cap:build && cd android && ./gradlew assembleDebug && cd ..",
    "build:android:release": "npm run cap:sync && cd android && ./gradlew assembleRelease && cd ..",
    "build:ios": "npm run cap:sync && npx cap build ios",
    "build:all": "npm run build:firebase && npm run build:android",
    "deploy": "npm run build:firebase && firebase deploy --only hosting",
    "deploy:android": "npm run build:android && echo 'APK built, starting distribution...' && firebase appdistribution:distribute android/app/build/outputs/apk/debug/app-debug.apk --app $FIREBASE_APP_ID --groups 'testers' --release-notes \"$(git log -1 --pretty=%B)\" --debug",
    "deploy:android:release": "npm run build:android:release && firebase appdistribution:distribute android/app/build/outputs/apk/release/app-release.apk --app $FIREBASE_APP_ID --groups 'beta-testers' --release-notes \"$(git log -1 --pretty=%B)\"",
    "deploy:ios": "npm run build:ios && echo 'iOS deployment requires Xcode - open ios/App.xcworkspace'",
    "deploy:all": "npm run deploy && npm run deploy:android",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "release:dry-run": "standard-version --dry-run",
    "ship": "npm run release && git push --follow-tags && npm run deploy:all",
    "ship:web": "npm run release && git push --follow-tags && npm run deploy",
    "ship:android": "npm run release && git push --follow-tags && npm run deploy:android",
    "seed:events": "tsx scripts/seed-events.ts",
    "seed:events:clear": "tsx scripts/seed-events.ts --clear",
    "seed:events:dry": "tsx scripts/seed-events.ts --dry-run",
    "seed:venues": "tsx scripts/seed-venues.ts",
    "seed:venues:clear": "tsx scripts/seed-venues.ts --clear",
    "seed:venues:dry": "tsx scripts/seed-venues.ts --dry-run",
    "lint": "eslint src/app/ && tsc --noEmit",
    "lint:fix": "eslint src/app/ --fix",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular-builders/jest": "20.0.0",
    "@angular/cdk": "20.0.4",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/fire": "20.0.1",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-server": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/ssr": "^20.0.4",
    "@capacitor/android": "7.4.1",
    "@capacitor/camera": "7.0.1",
    "@capacitor/cli": "7.4.1",
    "@capacitor/core": "7.4.1",
    "@capacitor/ios": "7.4.1",
    "@google/generative-ai": "0.24.1",
    "@ionic/angular": "8.6.3",
    "@jest/globals": "29.7.0",
    "cheerio": "^1.0.0",
    "express": "^5.1.0",
    "nanoid": "5.1.5",
    "puppeteer": "^23.9.0",
    "robots-parser": "^3.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.0.4",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/build": "^20.0.4",
    "@angular/cli": "^20.0.4",
    "@angular/compiler-cli": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@types/cheerio": "^0.22.31",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "29.5.13",
    "@types/node": "^20.17.19",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "eslint": "9.30.1",
    "jasmine-core": "~5.7.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-preset-angular": "14.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "3.6.2",
    "source-map-explorer": "2.5.3",
    "standard-version": "9.5.0",
    "tsx": "4.20.3",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": "20.x"
  }
}
